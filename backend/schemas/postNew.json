{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://propulse.com/postNew.schema.json",
  "title": "New Post",
  "description": "A post in the database",
  "type": "object",
  "properties": {
    "postedBy": {
      "type": "integer"
    },
    "jobId": {
      "type": "integer"
    },
    "deadline": {
      "type": "string"
    },
    "progress": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "urgency": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "content": {
      "type": "string",
      "minLength": 1
    },
    "tagged": {
      "type": "array"
    }
  },
  "additionalProperties": false,
  "required": ["postedBy", "jobId", "content"]
}
